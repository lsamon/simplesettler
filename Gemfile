source 'https://rubygems.org'

ruby '2.3.1'

gem 'puma'
gem 'rails', '5.1.1'

# Use postgresql as the database for Active Record
gem 'pg', '~> 0.15'

# Use SCSS for stylesheets and Javascript
gem 'bourbon'
gem 'coffee-rails'
gem 'font-awesome-sass'
gem 'jquery-rails'
gem 'sass-rails'
gem 'uglifier', '>= 1.3.0'

# form gems
gem 'record_tag_helper', '~> 1.0'
gem 'simple_form'

gem 'dotenv'

gem 'devise'
gem 'rails_12factor'

# caching
gem 'redis'
gem 'redis-namespace'

# mount point gems
gem 'sidekiq'
gem 'sinatra', '>= 1.3.0', require: nil

gem 'figaro'
gem 'gibbon'
gem 'lograge'
gem 'mailgun-ruby'

# image/file processing gems
gem 'carrierwave'
gem 'carrierwave-aws'
gem 'cloudinary'
gem 'mini_magick'

# SEO gems
gem 'friendly_id'
gem 'gretel'
gem 'meta-tags'

gem 'kaminari'

# location related gems
gem 'country_select'
gem 'worldly'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
gem 'rest-client'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

gem 'stripe'

group :development, :test do
  gem 'annotate'
  gem 'better_errors'
  gem 'byebug'
  gem 'pry-rails'
end

group :test do
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'rspec-rails', '~> 3.5'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'awesome_print', require: 'ap'
  gem 'letter_opener'
  gem 'spring'
  gem 'web-console', '~> 2.0'
end
