<% breadcrumb :admin_category, @category, style: :bootstrap %>
<%= simple_form_for [:admin, @category], html: {:multipart => true} do |f| %>
  <div class="row admin m-t-2">
    <div class="col-sm-8">
      <h2><%= @category.new_record? ? 'New Article' : 'Edit Article' %></h2>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.input :name, label: false, input_html: { placeholder: 'Name', class: 'form-control' } %>
        </div>
      </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    </div>
  </div>
<% end %>
