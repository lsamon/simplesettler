<% breadcrumb :admin_category, @category, style: :bootstrap %>
<%= simple_form_for [:admin, @category], input_html: { class: 'form-control' } do |f| %>
  <div class="row admin form-group m-t-2">
    <div class="col-sm-8 col-sm-offset-2">
      <h2><%= @category.new_record? ? 'New Category' : 'Edit Category' %></h2>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.input :name, input_html: { class: 'form-control' } %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
