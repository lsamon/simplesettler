<div class="row admin form-group m-t-2">
  <div class="col-sm-8 col-sm-offset-2">
    <h2><%= @city.new_record? ? 'New City' : 'Edit City' %></h2>
    <%= simple_form_for [:admin, @city], input_html: { class: 'form-control' } do |f| %>
      <%= f.input :name, input_html: { class: 'form-control' } %>
      <%= country_select('city', 'country', { only: ['AU'] }, { class: "form-control" })  %>
      <%= f.input :population, input_html: { class: 'form-control' } %>
      <%= f.input :description, input_html: { class: 'form-control' } %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
