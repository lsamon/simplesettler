<% breadcrumb :admin_root, @cities, style: :bootstrap %>
<div class="articles">
  <h2><%= @cities.model_name %></h2>
  <%= link_to "Add City", new_admin_city_path, class: "btn btn-primary" %>
  <table class="table">
    <thead>
      <tr>
      <%= sort_header :name, 'Name' %>
      <th>Country</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @cities %>
    </tbody>
  </table>
  <%= paginate @cities %>
</div>
