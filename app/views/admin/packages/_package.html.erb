<%= content_tag_for(:tr, package) do %>

    <td><%= package.name %></td>
    <td><%= number_to_currency(package.price) %></td>
    <td><%= raw(package.description) %></td>
    <td><%= package.status %></td>
    <td><%= l package.created_at %></td>
    <td><%= link_to(raw("<i class='fa fa-eye'></i>"), admin_package_path(package)) %></td>
    <td><%= link_to(raw("<i class='fa fa-trash'></i>"), admin_package_path(package),method: :delete, data: { confirm: 'Are you sure?' }) %></td>
    <td><%= link_to(raw("<i class='fa fa-pencil-square-o'></i>"), edit_admin_package_path(package)) %></td>

<% end %>
