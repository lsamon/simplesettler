<% breadcrumb :admin_package, @package, style: :bootstrap %>
<div class="articles">
  <%= simple_form_for [:admin, @package], input_html: { class: 'form-control' } do |f| %>
      <div class="row admin form-group m-t-2">
        <div class="col-sm-8 col-sm-offset-2">
          <h2><%= @package.new_record? ? 'New Package' : 'Edit Package' %></h2>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.input :name, input_html: { class: 'form-control' } %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.input :price, input_html: { class: 'form-control' } %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.cktext_area :description, input_html: { class: 'form-control' } %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= f.input :status, collection: Package.statuses.keys, include_blank: false, input_html: { class: 'form-control' } %>
            </div>
          </div>


          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Back', admin_packages_path, class: 'btn btn-warning' %>

        </div>
      </div>
  <% end %>
</div>
