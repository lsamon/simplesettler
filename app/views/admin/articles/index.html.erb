<% breadcrumb :admin_root, @articles, style: :bootstrap %>
<div class="row">
  <div class="col-sm-12">
    <h2><%= @articles.model_name %></h2>
    <table class="table">
      <thead>
        <tr>
        <%= sort_header :title, 'Title' %>
        <th>Cities</th>
        <%= sort_header :status, 'Status', class: 'hidden-sm-down hidden-xs' %>
        <th></th>
        <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @articles %>
      </tbody>
    </table>
    <%= paginate @articles %>
  </div>
</div>
