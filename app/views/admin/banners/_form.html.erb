<%# breadcrumb :admin_banner, @banner %>
<div class="banners">
  <%= simple_form_for [:admin, @banner], html: {:multipart => true} do |f| %>
    <div class="row admin m-t-2">
      <div class="col-sm-8">
        <h2><%= @banner.new_record? ? 'New Banner' : 'Edit Banner' %></h2>
        <div class="form-group row">
          <div class="col-sm-12">
            <%= f.input :title, label: false, input_html: { placeholder: 'Title', class: 'form-control' } %>
          </div>
        </div>
        <div class="form-group row">
          <% if @banner.media.present? %>
            <div class="col-sm-1">
              <%= image_tag @banner.media.thumb.url %>
            </div>
          <% end %>
          <div class="col-sm-11">
            <%= f.hidden_field :media_cache %>
            <%= f.file_field(:media) %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
