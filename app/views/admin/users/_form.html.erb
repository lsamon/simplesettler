<% breadcrumb :admin_user, @user, style: :bootstrap %>
<div class="signin">
  <%= simple_form_for [:admin, @user], input_html: { class: 'form-control' }, wrapper_mappings: { boolean: :vertical_boolean } do |f| %>
    <div class="row admin form-group m-t-2">
      <div class="col-sm-8 col-sm-offset-2">
        <h2><%= @user.new_record? ? 'New User' : 'Edit User' %></h2>
        <div class="form-group">
          <%= f.input :username, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :email, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :password, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation, input_html: { class: 'form-control' } %>
        </div>
        <%= f.input :admin %>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
