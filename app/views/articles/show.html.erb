<% title @article.meta_title.present? ? @article.meta_title : @article.title %>
<% meta_tag :description, @article.meta_description %>
<% meta_tag :keywords, @article.keywords %>
<div class="row header">
  <%= image_tag @article.image.large.url %>
  <div class="row text-center">
    <div class="col-md-12">
      <div class="carousel-caption" id="startchange">
        <h2><%= @article.title %></h2>
      </div>
    </div>
  </div>
</div>
<div class="bg">
    <div class="row articles">
      <% breadcrumb :site_city, current_city %>

      <div class="col-sm-10 col-sm-offset-1 content">
        <div class="row">
          <div class="col-sm-12 articleContent">
            <%= raw(@article.content) %>
        </div>
      </div>
        <div class="row share">
          <div class="col-sm-3">
            <a href="#" class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i> Facebook</a>
          </div>
          <div class="col-sm-3">
            <a href="#" class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i> Twitter</a>
          </div>
          <div class="col-sm-3">
            <a href="#" class="google-plus"><i class="fa fa-google-plus" aria-hidden="true"></i> Google+</a>
          </div>
          <div class="col-sm-3">
            <a href="#" class="pinterest"><i class="fa fa-pinterest-p" aria-hidden="true"></i> Pinterest</a>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 share">
            <div id="disqus_thread"></div>
            <script>
              (function() { // Disqus
              var d = document, s = d.createElement('script');
              s.src = '//easysettler.disqus.com/embed.js';
              s.setAttribute('data-timestamp', +new Date());
              (d.head || d.body).appendChild(s);
              })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
          </div>
        </div>
      <div class="row spacer-bottom">
        <% @articles.limit(3).each do |a| %>
          <div class="col-xs-12 col-sm-4">
            <%= link_to(city_article_path(current_city, a), class: "articleSelect") do %>
            <div class="imagebox">
              <%= image_tag a.image_url, class: "img-effect" %>
              <span class="imagebox-desc"><%= a.title %></span>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
