<div class="navSpacer"></div>

<div class="container">

  <div class="signInUpContainer">
    <h2 class='signInUpFormTitle'>Sign in to This.</h2>

    <% if flash[:message].present? %>
      <p><%= flash[:message] %></p>
    <% end %>

    <%= form_tag login_path do %>
    <p>
      <%= email_field_tag :email, nil, :placeholder => 'Email', :class => "signInUpForm" %>
    </p>

    <p>
      <%= password_field_tag :password, nil, :placeholder => 'Password', :class => "signInUpForm" %>
    </p>

    <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.8&appId=348348055349654";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    </script>

    <%= submit_tag 'Log in', :class => 'signInUpFormButton' %>

    <% end %>
  </div>

</div>
