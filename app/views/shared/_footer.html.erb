<div class="container-fluid footer-section">
  <div class="row">
    <div class="col-xs-6 col-sm-4">
      <ul>
        <li><h4 class="spacer"><%= t('site.footer.company.title') %></h4></li>
        <li><%= link_to t('site.footer.company.home'), root_path %></li>
        <li><%= link_to t('site.footer.company.about'), about_path %></li>
        <li><%= link_to t('site.nav.help'), '/dashboard', class: "ss-button" %></li>
        <li><%= link_to t('site.footer.support.tos'), tos_path %></li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-6 col-offset-sm-3 col-sm-4">
      <ul>
        <li><h4 class="spacer"><%= t('site.footer.subscribe.label') %></h4></li>
        <li class="ss-input-container subscribe">
          <%= text_field :search, nil, class: 'ss-input', :placeholder => t('site.footer.subscribe.placeholder') %>
          <%= button_tag(type: 'submit') do %>
            <i class="fa fa-paper-plane"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="col-xs-6 col-sm-4">
      <ul>
        <li class="social-footer">
          <h4><%= t('site.footer.subscribe.follow') %></h4>
        </li>
        <li class="social-icons">
          <%= link_to("https://www.facebook.com/simplesettler", target: '_blank') do %>
            <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i>
          <% end %>
          <%= link_to("https://twitter.com/simplesettler", target: '_blank') do %>
            <i class="fa fa-twitter fa-2x" aria-hidden="true"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <hr class="footer-divider">
    <div class="col-sm-12">
      <div class="footer-disclaimer">
        <a style="font-size: 13px;" href="/privacy">Privacy Policy</a> | Â© 2017. SimpleSettler
      </div>
    </div>
  </div>
  </div>
</div>
