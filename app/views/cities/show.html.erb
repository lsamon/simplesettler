<div class="navSpacer"></div>

<div class="container">

  <h2><%= @city.name %></h2>
  <p><%= @city.description %></p>

  <% if @current_user.present? && @current_user.admin? %>
    <%= button_to 'delete', @city, :method => 'delete'%>
  <% end %>

  <div>
    <div class="categorySelect">
      <%= link_to 'All', city_articles_category_path(@city.name, 'All', :anchor => "all"), :remote => true  %>
    </div>
    <% @categories.each do |c| %>
      <div class="categorySelect">
        <%= link_to c.name, city_articles_category_path(@city.name, c.name, :anchor => c.name.downcase), :remote => true %>
      </div>
    <% end %>
  </div>

  <hr>
  <div class="articleSelectContainer">
    <% @articles.each do |a| %>
    <div class='articleSelect'>
      <%= link_to a.title, article_path(a) %>
    </div>
    <% end %>
  </div>

</div>
