<div class="row banner">
  <div class="col-sm-12">
   <%= image_tag "#{@city.name.downcase}.jpg", class: "imageCity" %>
    <div class="content">
      <h1><%= @city.name %></h1>
      <h2><em><%= @city.slogan %></em></h2>
    </div>
  </div>
</div>

<div class="row categorySelectBg">
  <div class="col-sm-3 categorySelect">
    <%= link_to(city_category_path(@city, 'All'), remote: true ) do %>
    <%= image_tag('cat1.png') %>
      <span class="all">All</span>
    <% end %>
  </div>
  <% @categories.each_with_index do |category, i| %>
    <% i += 2 %>
    <div class="col-sm-3 categorySelect">
      <%= link_to(city_category_path(@city, category), remote: true) do %>
        <%= image_tag("cat#{i}.png") %>
        <span><%= category.name %></span>
      <% end %>
    </div>
  <% end %>
</div>

<% breadcrumb :site_root, style: :bootstrap %>
<div class="row">
  <div class="col-sm-12 articleSelectContainer">
    <div class="row articles">
      <%= render collection: @articles, partial: 'all_city_articles', as: :article %>
    </div>
  </div>
</div>
