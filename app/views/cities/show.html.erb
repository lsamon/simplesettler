<div class="row">
  <div class="col-sm-12 banner">
   <%= image_tag "#{@city.name.downcase}.jpg", class: "imageCity" %>
    <div class="content">
      <h1><%= @city.name %></h1>
      <h2><em><%= @city.slogan %></em></h2>
    </div>
  </div>
</div>

<div class="row category-banner">
  <div class="row categorySelectBg">
    <% @categories.each_with_index do |category, i| %>
      <% i += 2 %>
      <div class="col-xs-4 categorySelect">
        <%= link_to(city_category_path(@city, category), remote: true) do %>
          <%= image_tag("cat#{i}.png", class: 'img-category') %>
          <span class="category"><%= category.name %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% breadcrumb :site_root, style: :bootstrap %>
<div class="row articleSelectContainer">
  <div class="col-sm-12">
    <div class="row articles">
      <%= render collection: @articles, partial: 'all_city_articles', as: :article %>
    </div>
  </div>
</div>
