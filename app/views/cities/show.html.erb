<div class="bannerCity">
 <%= image_tag "#{@city.name.downcase}.jpg", class: "imageCity" %>
  <div class="bannerInfo">
    <h1><%= @city.name %></h1>
    <h2><em><%= @city.slogan %></em></h2>
  </div>
</div>

<div class="categorySelectBg">
    <div class="categorySelect">
      <%= link_to 'All', city_category_path(@city, "All"), remote: true, class: "catAll"  %>
    </div>

    <% @categories.each do |category| %>
      <div class="categorySelect">
        <%= link_to category.name, city_category_path(@city, category), remote: true %>
      </div>
    <% end %>
</div>

<div class="container">
  <div class="articleSelectContainer">
    <div class="row articles">
      <%= render collection: @articles, partial: 'all_city_articles', as: :article %>
    </div>
  </div>
</div>
