$(document).ready(function(){
  $('.articleSelect').remove();

  var $articleContainer = $('.articleSelectContainer');

  <% chosen_category = params[:category] %>

  <% @city.articles.each do |article| %>
    <% if article.categories.pluck(:name).include? chosen_category %>
      window.location.hash = encodeURIComponent("<%= chosen_category.gsub!(" ","_") %>");
      var $div = $('<div class="articleSelect">');
      $div.text("<%= article.title %>");
      $articleContainer.append($div);
    <% elsif chosen_category == 'All' %>
      var $div = $('<div class="articleSelect">');
      $div.text("<%= link_to article.title, article_path(article) %>");
      $articleContainer.append($div);
    <% end %>
  <% end %>

});
