$(document).ready(function(){
  $('.rows').remove();
  $('.articleCont').remove();
  $('.articleSelect').remove();
  $('.articleImg').remove();

  console.log("We GOT HERE");

  var $articleContainer = $('.articleSelectContainer');
  var $rows = $('<div class="rows">');
  var $articleCont = $('<div class="articleCont">');

  $articleContainer.append($rows);


  <% @all_articles.each do |article| %>
    var $div = $('<%= link_to article.title, article_path(article), :class => "articleSelect" %>');
    var $img = $('<%= image_tag article.featured_image, :class => "articleImg" %>')
    var $articleCont = $('<div class="articleCont">');
    $articleCont.append($div);
    $articleCont.append($img);
    $rows.append($articleCont);
  <% end %>

});
