  <div class="field">
    <%= f.text_field :country, :placeholder => 'country', :class => "signinInput"  %>
  </div>
  <div class="field">
    <%= f.text_field :slogan, :placeholder => 'slogan', :class => "signinInput"  %>
  </div>
  <div class="field">
    <%= f.text_area :description, :rows => 10, :placeholder => 'description', :class => "signinInputArea"  %>
  </div>
  <div class="field">
    <%= f.text_field :population, :placeholder => 'population', :class => "signinInput"  %>
  </div>

  <div class="actions">
    <%= f.submit :class => "signinButton" %>
  </div>
<% end %>
