 <div class="banner">
  <div>
    <h1>SETTLE ANYWHERE.</h1>
    <h2>Discover and connect with services in your city.</h2>
    <div>
    <%= form_tag(cities_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Cities", :class => 'searchCity', :pattern => ".{2,20}", :title => 'Enter more than 1 character', data: { autocomplete: autocomplete_city_name_cities_path } %>
      <%= button_to nil, :class => 'searchCitySubmit' do %><i class="fa fa-search" aria-hidden="true"></i><% end %><br />
    <% end %>
  </div>

    <div class="ausFlag"></div>
    <div class="flagAvail"><em><p>Currently available in Australia</p></em></div>
  </div>
</div>


<section class="container">

  <div class="explore">

    <div class="header">
      <h2>Explore your community</h2>
      <p>See whats happening in your community, or find new citys to explore.</p>
    </div>


  <div class="cities">
     <% @cities.in_groups_of(3)  do |c1, c2, c3| %>
      <div class="row">
          <div class="col-sm-4 <%= c1.name %>">
              <%= link_to city_path(c1), :class => 'labelShort' do %>
              <span><%= "#{(c1.name).upcase}" %></span>
              <%= image_tag "#{c1.name.downcase}.jpg", :class => "" %>
              <% end %>
          </div>
          <% if c2 %>
          <div class="col-sm-4 <%= c2.name %>">
              <%= link_to city_path(c2), :class => 'labelShort' do %>
              <span><%= "#{(c2.name).upcase}" %></span>
              <%= image_tag "#{c2.name.downcase}.jpg", :class => "" %>
              <% end %>
          </div>
          <% end %>
          <% if c3 %>
          <div class="col-sm-4 <%= c3.name %>">
              <%= link_to city_path(c3), :class => 'labelShort' do %>
              <span><%= "#{(c3.name).upcase}" %></span>
              <%= image_tag "#{c3.name.downcase}.jpg", :class => "" %>
              <% end %>
          </div>
          <% end %>
      </div>
      <% end %>
  </div>

  </div>
</section>
