<div class="banner">
  <div>
    <h1>SETTLE ANYWHERE.</h1>
    <h2>Discover and connect with services in your city.</h2>
    <%= text_field :search, nil, :class => 'searchCity', :placeholder => 'Search your city' %>
    <p>Currently available in Australia</p>
  </div>
</div>

<div class="container">

  <div class="recommendedBy">
    <div class="logos one"></div>
    <div class="logos two"></div>
    <div class="logos three"></div>
  </div>

  <div class="explore">

    <div class="header">
      <h2>Explore your community</h2>
      <p>See whats happening in your community, or find new citys to explore.</p>
    </div>

    <div class="cities">
      <div class="rows">
      <% @cities.each do |c| %>
        <div class="<%= c.name %>">
          <%= link_to "#{(c.name).upcase}", city_show_path(c.name), :class => 'labelShort' %>
          <%= image_tag "#{c.name.downcase}.jpg", :class => "cities" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="listings">
    <div class="header">
      <h2>Recent listings in your city</h2>
      <p>Discover some of our best listings</p>
    </div>
    <div class="listingArticles">
      <div class="rows">
        <div class="articles"></div>
        <div class="articles"></div>
        <div class="articles"></div>
      </div>
      <div class="rows">
        <div class="articles"></div>
        <div class="articles"></div>
        <div class="articles"></div>
      </div>
    </div>
    <div class="allArticlesButton" >
    <%= link_to "VIEW ALL", articles_path %>
    </div>
  </div>
</div>

<div class="getStarted">
