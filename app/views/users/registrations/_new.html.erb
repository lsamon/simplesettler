<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "register-form" }) do |f| %>
  <%= devise_error_messages! %>
  <%= image_tag('logo.png', title: 'simplesettler', alt: 'simplesettler', class: 'logo') %>
  <%= f.input :email, autofocus: true, input_html: { placeholder: "Email", class: "spacer" }, label: false  %>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= f.input :password, autocomplete: "off", input_html: { placeholder: "Password" }, label: false %>
  <%= f.input :password_confirmation, autocomplete: "off", input_html: { placeholder: "Password Confirmation" }, label: false %>
  <%= f.submit "Sign up!"%>
  <p class="message">Have an account? <%= link_to "Sign in", new_user_session_path %></p>
<% end %>
