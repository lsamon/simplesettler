<!DOCTYPE html>
<html>
<head>
  <title>Simple Settler</title>
  <%= favicon_link_tag 'favicon.png', rel: 'shortcut icon', type: 'image/png' %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.js"></script>
  <%= javascript_include_tag :admin %>
  <%= javascript_include_tag Ckeditor.cdn_url %>
  <%= cloudinary_js_config %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
  <link rel="stylesheet" href="  https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>

  <%= stylesheet_link_tag 'admin', media: 'all' %>

  <%= csrf_meta_tags %>
</head>
<body class="admin">
    <!-- Navigation -->
    <nav id="mainNav" class="navbar fixed-top navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarExample" aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">SimpleSettler</a>
        <div class="collapse navbar-collapse" id="navbarExample">
            <ul class="sidebar-nav navbar-nav">
                <li class="nav-item <%= controller_name=="articles" ?"active": ""%>">
                    <%= link_to "Articles", admin_articles_path, class: "nav-link " %>
                </li>
                <li class="nav-item <%= controller_name=="cities" ?"active": ""%>">
                  <%= link_to "Cities", admin_cities_path, class: 'nav-link' %>
                </li>
                <li class="nav-item <%= controller_name=="categories" ?"active": ""%>">
                  <%= link_to "Categories", admin_categories_path, class: 'nav-link' %>
                </li>
                <li class="nav-item <%= controller_name=="users" ?"active": ""%>">
                  <%= link_to "Users", admin_users_path, class: 'nav-link' %>
                </li>
              <li class="nav-item <%= controller_name=="visa_types" ?"active": ""%>">
                  <%= link_to "Visa Types", admin_visa_types_path, class: 'nav-link' %>
                </li>
              <li class="nav-item <%= controller_name=="payments" ?"active": ""%>">
                  <%= link_to "Payments", admin_payments_path, class: 'nav-link' %>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                  <%= link_to raw('<i class="fa fa-fw fa-sign-out"></i> Logout'), destroy_user_session_path, :method => 'delete'  %>
              </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
      <%= breadcrumbs display_single_fragment: true, separator: " &rsaquo; ", style: :bootstrap %>
      <%= yield %>

    </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  <script>
      $(document).ready(function() {
          $('#hamburger').click(function() {
              $('.nav .top ul').toggleClass('responsiveNavShow');
          });
          $('.nav ul li a').click(function() {
              $('.nav .top ul').toggleClass('responsiveNavShow');
          });
      });
  </script>
</body>
</html>
