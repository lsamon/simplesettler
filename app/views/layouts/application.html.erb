<!DOCTYPE html>
<html>
<head>
  <title>
      <% if yield(:title).present? %>
        <%= "#{yield(:title)} | " %> SimpleSettler
      <% else %>
        SimpleSettler
      <% end %>
  </title>
  <meta name='description'
      content='<%= yield_meta_tag(:description, 'SimpleSettler, one stop hub for your people looking to migrate.') %>' />
  <meta name='keywords'
      content='<%= yield_meta_tag(:keywords, 'student visas,migrant accomodation,settlement help') %>' />
  <%= favicon_link_tag 'favicon.png', rel: 'shortcut icon', type: 'image/png' %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag Ckeditor.cdn_url %>
  <%= cloudinary_js_config %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row header">
      <nav>
        <div class="nav">
          <%= link_to(root_path, class: 'navLeft') do %>
            <%= image_tag('logo.png', title: 'simplesettler', alt: 'simplesettler') %>
          <% end %>

          <div class="navRight">
            <ul>
            <li><%= link_to t('site.nav.how_it_works'), "#howItWorks", class: "" %></li>
            <li><%= link_to t('site.nav.help'), '/dashboard', class: " helpMenuItem" %></li>

            <% unless user_signed_in? %>
              <li><%= link_to t('site.nav.sign_in'), new_user_session_path, class: "signInOutButton " %></li>
              <li><%= link_to t('site.nav.sign_up'), new_user_registration_path, class: "signInOutButton "  %></li>
            <% end %>
            <% if user_signed_in? %>
                <li><%= link_to "#{t('site.nav.logout')} #{ current_user.username }", destroy_user_session_path, :method => 'delete', class: "logoutButton " %></li>
            <% end %>
            </ul>
          </div>
          <%= link_to 'â˜°', 'javascript:void(0);', class: "hamburger", :id => "hamburger", :style => "font-size: 24px;"%>
        </div>
      </nav>
    </div>


  <%= yield %>

  <div class="footer-section">
      <div class="row">
        <div class="col-xs-12 col-lg-4">
          <ul>
            <li><h3><%= t('site.footer.company.title') %></h3></li>
            <li><li><%= link_to t('site.footer.company.home'), root_path %></li></li>
            <li><%= t('site.footer.company.about') %></li>
            <li><%= t('site.footer.company.partner') %></li>
          </ul>
        </div>
        <div class="col-xs-12 col-lg-4">
          <ul>
            <li><h3><%= t('site.footer.support.title') %></h3></li>
            <li><%= link_to t('site.footer.support.tos'), tos_path %></li>
            <li><%= link_to t('site.footer.support.privacy'), privacy_path %></li>
            <li>hello@simplesettler.com</li>
          </ul>
        </div>
        <div class="col-xs-12 col-lg-4">
          <ul>
            <li><h3><%= t('site.footer.subscribe.label') %></h3></li>
            <li class="subscribe">
              <%= text_field :search, nil, class: 'enterEmail', :placeholder => t('site.footer.subscribe.placeholder') %>
              <%= button_tag(type: 'submit', class: "submitEmail") do %>
                <i class="fa fa-paper-plane"></i>
              <% end %>
            </li>
            <li class="social-footer">
              <h3><%= t('site.footer.subscribe.follow') %></h3>
              <div class="social-icons">
                <%= link_to("https://www.facebook.com/simplesettler", target: '_blank') do %>
                  <i class="fa fa-facebook-square" aria-hidden="true"></i>
                <% end %>
                <%= link_to("https://twitter.com/simplesettler", target: '_blank') do %>
                  <i class="fa fa-twitter" aria-hidden="true"></i>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
        $('#hamburger').click(function() {
            $('.navRight ul').toggleClass('responsiveNavShow');
        });
        $('.navRight ul li a').click(function() {
            $('.navRight ul').toggleClass('responsiveNavShow');
        });
    });
</script>
</body>
</html>
